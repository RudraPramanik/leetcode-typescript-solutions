{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "problems",
    "target": "ESNext",
    "lib": ["esnext", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "noEmit": true,
    "checkJs": false,
    "skipLibCheck": true,
    // "strictNullChecks": false, // Maybe remove
    "baseUrl": ".",
    "paths": {
      "app*": ["src/app*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./playground.ts", "./utils"]
}
